<Configuration status="WARN">
<Properties>
<Property name= "basepath">./logs</Property>
</Properties>
  <Appenders>
  
  <RollingFile name="RollingFile" fileName="$(basepath)/print.log" filePattern="logs/app-%d{MM-dd-yyyy}.log.gz"
                 ignoreExceptions="false">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <TimeBasedTriggeringPolicy />
    </RollingFile>
    
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
  <Logger name="OodlesDB.ProjectTest" level="info" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Root level="trace">
      <AppenderRef ref="file"/>
    </Root>
  </Loggers>
</Configuration>